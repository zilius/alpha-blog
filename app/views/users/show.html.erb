<div>
    <% if logged_in? %>
        <% if @user == current_user %>
            <%= link_to "Edit your profile", edit_user_path(@user), class: "btn" %>
        <% end %>
        <% if current_user.admin? %>
            <%= link_to "Delete_user", user_path(@user), class: "navbarItem", data: { "turbo-method": :delete } %>
        <% end %>
    <% end %>
</div>

